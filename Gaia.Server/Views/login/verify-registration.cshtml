
@{
    Layout = null;
}



<div class="text-center" style="text-align:center; margin-top:150px;">
    <h2 ng-show="vm.isVerifying" class="text-primary">Verifying</h2>
    <p>
        <box-loader size="40" color="'#518CA3'" block-loader="true" show="vm.isVerifying"></box-loader>
    </p>

    <div style="margin-top:20px;">
        <div style="margin:0 auto; width:300px;" class="alert-wrapper jgrowl-showcase" ng-class="{hidden:!vm.hasMessage()}">
            <div class="jGrowl">
                <div class="jGrowl-notification" ng-class="{'growl-error':vm.hasVerificationError, 'growl-success':!vm.hasVerificationError}">
                    <div class="jGrowl-header"><strong ng-bind-html="vm.messageHeader"></strong></div>
                    <div class="jGrowl-message" ng-bind-html="vm.message"></div>
                </div>

                <a ng-click="vm.action()" class="btn btn-default" style="margin-top:20px;">{{vm.linkText}}</a>
            </div>
        </div>
    </div>
</div>
